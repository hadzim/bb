
import tbs ;

project BB_Services 
	:
		requirements
		<include>include
		<include>src
		<library>$(TBS)/TBS_Services//TBS@Services
		<library>$(TBS)//dbus-1
		<use>$(TBS)//PocoLibrarySet
		<library>$(TBS)//PocoNetSSL
		<library>$(TBS)/TBS//TBS
		<link>shared
	:
		usage-requirements
		<include>include
	;


path-constant proj-dir : . ;
tbs.obj-build common-sources : $(proj-dir) : [ tbs.glob-tree $(proj-dir)/src : *.cpp ] ; 
lib BB@Services : common-sources : <tag>@tbs.dot-from-at ;

tbs.link-test BB@Services ;
tbs.installation : BB@Services : lib ;
