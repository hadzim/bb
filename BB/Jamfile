
import tbs ;

project BB 
	:
		requirements
		<include>include
		<include>src
		<library>$(TBS)/BB.Services//BB@Services
		<use>$(TBS)//PocoLibrarySet
		<library>$(TBS)/TBS//TBS
		<device>lindevice:<library>$(TBS)//systemd-daemon
		<device>tpro:<library>$(TBS)//systemd-daemon
		<link>shared
	:
		usage-requirements
		<include>include
		<device>lindevice:<library>$(TBS)//systemd-daemon
		<device>tpro:<library>$(TBS)//systemd-daemon
	;


path-constant proj-dir : . ;
tbs.obj-build common-sources : $(proj-dir) : [ tbs.glob-tree $(proj-dir)/src : *.cpp ] ; 
lib BB : common-sources : <tag>@tbs.dot-from-at ;

tbs.link-test BB ;
tbs.installation : BB : lib ;
