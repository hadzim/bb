
import tbs ;

project BB_Collector
	:
		requirements
		<include>src
		<library>$(TBS)/BB//BB
		<library>$(TBS)/BB.Services//BB@Services
	;

path-constant proj-dir : . ;

tbs.obj-build common-sources : $(proj-dir)
	:
		[ tbs.glob-tree $(proj-dir) : *.cpp ]
	:
	;

exe BB@Collector
	:
		common-sources	
	:
		<tag>@tbs.dot-from-at
	;

tbs.installation : BB@Collector : . ;