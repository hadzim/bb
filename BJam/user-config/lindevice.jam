
project user-config ;

constant LINTLCH_ENV_FILE : /usr/local/tbs-toolchain-target-i586-gcc-4.6-i686/environment-setup-i586-angstrom-linux ;
constant LINTLCH_PATH : /usr/local/tbs-toolchain-target-i586-gcc-4.6-i686/sysroots/i686-angstromsdk-linux/usr/bin/i586-angstrom-linux ;

using gcc
	:
		lindevice
	:
		$(LINTLCH_PATH)/i586-angstrom-linux-g++
	:
		<archiver>$(LINTLCH_PATH)/i586-angstrom-linux-ar
		<compileflags>"-m32   -march=i586 --sysroot=/usr/local/tbs-toolchain-target-i586-gcc-4.6-i686/sysroots/i586-angstrom-linux"
		<linkflags>--sysroot=/usr/local/tbs-toolchain-target-i586-gcc-4.6-i686/sysroots/i586-angstrom-linux
	;

import qt4 ;

